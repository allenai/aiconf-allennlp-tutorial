{
    "dataset_reader": {
      "type": "imdb",
      "token_indexers": {
          "tokens": {
              "type": "single_id"
          }
      }
    },
    "train_data_path": "data/aclImdb/train/*/*.txt",
    "validation_data_path": "data/aclImdb/test/*/*.txt",
    "model": {
      "type": "imdb",
      "text_field_embedder": {
        "token_embedders": {
          "tokens": {
            "type": "embedding",
            "embedding_dim": 100,
            "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.100d.txt.gz",
            "trainable": false
          }
        }
      },
      "encoder": {
        "type": "lstm",
        "input_size": 100,
        "hidden_size": 10,
        "num_layers": 1,
        "bidirectional": true
      }
    },
    "iterator": {
      "type": "bucket",
      "sorting_keys": [["review", "num_tokens"]],
      "batch_size": 10
    },
    "trainer": {
      "num_epochs": 50,
      "patience": 10,
      "cuda_device": 0,
      "grad_clipping": 5.0,
      "validation_metric": "+accuracy",
      "optimizer": {
        "type": "adagrad"
      }
    }
  }
